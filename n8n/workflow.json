      },
      "id": "merge_ai_with_snapshot",
      "name": "Merge AI with Snapshot",
      "type": "n8n-nodes-base.merge",
      "typeVersion": 3,
      "position": [
        950,
        360
      ]
    },
    {
      "parameters": {
        "jsCode": "return $input.all().map((item) => {\n  const anomalyScore = Number(item.json.anomalyScore || 0);\n  const aiSummary = item.json.aiSummary || 'deterministic fallback summary';\n\n  return {\n    json: {\n      ...item.json,\n      severity: anomalyScore >= 70 ? 'critical' : anomalyScore >= 45 ? 'watch' : 'normal',\n      executiveSummary: aiSummary,\n    },\n  };\n});"
      },
