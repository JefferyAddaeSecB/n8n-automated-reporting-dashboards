      "parameters": {
        "jsCode": "return $input.all().map(() => {\n  const revenue = Number((Math.random() * 50000 + 50000).toFixed(2));\n  const previousRevenue = Number((Math.random() * 50000 + 45000).toFixed(2));\n  const changePct = previousRevenue > 0 ? ((revenue - previousRevenue) / previousRevenue) * 100 : 0;\n\n  return {\n    json: {\n      revenue,\n      previousRevenue,\n      changePct: Number(changePct.toFixed(2)),\n      anomalyScore: Math.min(100, Math.round(Math.abs(changePct) * 3)),\n      generatedAt: new Date().toISOString(),\n    },\n  };\n});"
      },
      "id": "build_kpi_snapshot",
      "name": "Build KPI Snapshot",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [
        470,
        320
      ]
    },
    {
      "parameters": {
        "promptType": "define",
        "text": "={{'You create executive KPI narratives. Return strict JSON with keys aiScore (0-100), priority (normal|watch|critical), summary (string). KPI payload: ' + JSON.stringify($json)}}",
        "options": {}
      },
      "id": "ai_reporting_agent",
      "name": "AI Reporting Agent",
      "type": "@n8n/n8n-nodes-langchain.agent",
      "typeVersion": 3.1,
